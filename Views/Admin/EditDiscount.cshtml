@model TravelAgencyMVC.Models.Discount

@{
    ViewData["Title"] = "Edit Discount";
    var packages = ViewBag.Packages as List<TravelAgencyMVC.Models.TravelPackage>;
}

<h2>Edit Discount</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" action="/Admin/EditDiscount">
    <input type="hidden" name="discountId" value="@Model.DiscountId" />

    <div class="mb-3">
        <label class="form-label">Package</label>
        <select class="form-select" name="packageId" required>
            @foreach (var p in packages)
            {
                if (p.PackageId == Model.PackageId)
                {
                    <option value="@p.PackageId" selected>@p.PackageName (@p.BasePrice)</option>
                }
                else
                {
                    <option value="@p.PackageId">@p.PackageName (@p.BasePrice)</option>
                }
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">New Price</label>
        <input class="form-control" type="number" step="0.01" name="newPrice" value="@Model.NewPrice" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Start At</label>
        <input class="form-control" type="date" name="startAt" value="@Model.StartAt.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="mb-3">
        <label class="form-label">End At (max 7 days)</label>
        <input class="form-control" type="date" name="endAt" value="@Model.EndAt.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="isActive" value="true" @(Model.IsActive ? "checked" : "") />
        <label class="form-check-label">Is Active</label>
    </div>

    <button class="btn btn-success">Save</button>
    <a class="btn btn-secondary" href="/Admin/Discounts">Back</a>
</form>
