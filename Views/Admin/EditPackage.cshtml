@model TravelAgencyMVC.Models.TravelPackage

@{
    ViewData["Title"] = "Edit Package";
}

<h2>Edit Package</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" action="/Admin/EditPackage">
    <input type="hidden" name="packageId" value="@Model.PackageId" />

    <div class="mb-3">
        <label class="form-label">Package</label>
        <input class="form-control" value="@Model.PackageName" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Base Price</label>
        <input class="form-control" name="basePrice" type="number" step="0.01" value="@Model.BasePrice" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Available Rooms</label>
        <input class="form-control" name="availableRooms" type="number" value="@Model.AvailableRooms" required />
    </div>

    <button class="btn btn-success" type="submit">Save</button>
    <a class="btn btn-secondary" href="/Admin/Packages">Back</a>
</form>
