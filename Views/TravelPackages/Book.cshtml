@model TravelAgencyMVC.Models.TravelPackage

@{
    ViewData["Title"] = "Book Trip";
    var img = ViewBag.PrimaryImageUrl as string;
}

<h2>Book Trip</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (ViewBag.IsNotified == true)
{
    <div class="alert alert-success">
        A room is available for you! You can confirm booking now.
    </div>
}


<div class="row">
    <div class="col-md-5">
        @if (!string.IsNullOrWhiteSpace(img))
        {
            <img src="@img" alt="Trip image"
                 style="width:100%; max-height:320px; object-fit:cover; border-radius:12px;" />
        }
    </div>

    <div class="col-md-7">
        <h3>@Model.PackageName</h3>
        <p><strong>Destination:</strong> @Model.Destination, @Model.Country</p>

        <p>
            <strong>Dates:</strong>
            @Model.StartDate.ToString("yyyy-MM-dd")
            -
            @Model.EndDate.ToString("yyyy-MM-dd")
        </p>

        <p><strong>Price:</strong> @Model.BasePrice</p>
        <p><strong>Available rooms:</strong> @Model.AvailableRooms</p>
        <p><strong>Age limit:</strong> @Model.AgeLimit+</p>

        <p class="mt-3">@Model.Description</p>

        <hr />

        <form method="post" action="/TravelPackages/ConfirmBooking">
            <input type="hidden" name="packageId" value="@Model.PackageId" />

            <button type="submit"
                    class="btn btn-success"
                    @(Model.AvailableRooms <= 0 ? "disabled" : "")>
                Confirm Booking
            </button>
        </form>
        @if (Model.AvailableRooms <= 0)
        {
            <form method="post" action="/TravelPackages/JoinWaitingList" class="mt-2">
                <input type="hidden" name="packageId" value="@Model.PackageId" />
                <button type="submit" class="btn btn-warning">
                    Join Waiting List
                </button>
            </form>
        }
        @if (Model.AvailableRooms <= 0)
        {
            <p><strong>Waiting list:</strong> @(ViewBag.WaitingCount ?? 0) people</p>
        }


        @if (Model.AvailableRooms <= 0)
        {
            <p class="text-danger mt-2">
                This trip is fully booked. Next step will be joining the waiting list.
            </p>
        }

        <a class="btn btn-secondary mt-3" href="/TravelPackages">Back to Gallery</a>
    </div>
</div>
